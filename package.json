{
  "name": "monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "clean:dist": "pnpm rimraf \"**/dist\" --glob",
    "clean:node_modules": "pnpm dlx rimraf \"**/node_modules\" --glob",
    "clean:turbo": "pnpm dlx rimraf \"**/.turbo\" --glob",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "lint:fix": "biome check --write",
    "prepare": "husky",
    "prisma:generate": "pnpm dlx prisma generate --schema ./prisma"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "pnpm lint:fix",
    "**/package.json": "sort-package-json"
  },
  "dependencies": {
    "@nestjs/mapped-types": "*",
    "@radix-ui/react-label": "2.1.7",
    "@radix-ui/react-separator": "1.1.7",
    "input-otp": "1.4.2",
    "react-hook-form": "7.59.0",
    "sonner": "2.0.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.0",
    "@workspace/typescript-config": "workspace:*",
    "husky": "9.1.7",
    "lint-staged": "16.1.2",
    "rimraf": "6.0.1",
    "sort-package-json": "3.2.1",
    "turbo": "2.5.4",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": ">=20"
  }
}
