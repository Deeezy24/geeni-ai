generator client {
  provider = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")   // pooler
  directUrl  = env("DATABASE_URL")   // same as pooler
  schemas    = ["user_schema", "public", "workspace_schema", "subscription_schema"]
}